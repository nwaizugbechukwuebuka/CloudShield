[flake8]
# Maximum line length
max-line-length = 127

# Maximum McCabe complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    dist,
    build,
    migrations,
    .tox,
    htmlcov,
    .pytest_cache,
    node_modules

# Error codes to ignore
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    W504,  # line break after binary operator
    E402,  # module level import not at top of file

# Select specific error codes
select = E,F,W,C90

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    settings.py:E501
    config.py:E501

# Show source code for errors
show-source = True

# Show pep8 code
show-pep8 = True

# Count errors
count = True

# Statistics
statistics = True
